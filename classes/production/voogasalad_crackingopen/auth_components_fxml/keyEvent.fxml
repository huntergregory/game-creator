<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="auth.auth_fxml_controllers.KeyEventController"
          prefHeight="250.0" prefWidth="500.0" styleClass="gridPane">

    <columnConstraints>
        <ColumnConstraints percentWidth="50"  />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>

    <Label fx:id="titleLabel" text="Assign Key Element" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="keyTextField" promptText="Key" onKeyPressed="#setKey" styleClass="textfield" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="idTextField" promptText="Object ID"  styleClass="textfield" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextField fx:id="scriptTextField" promptText="Event Script" styleClass="textfield" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button fx:id="addButton" text="Add Key Element" onMouseClicked="#addKeyElement" styleClass="button" GridPane.rowIndex="2" GridPane.columnIndex="1"/>


    <stylesheets>
        <URL value="@styles/popup.css" />
    </stylesheets>

</GridPane>
