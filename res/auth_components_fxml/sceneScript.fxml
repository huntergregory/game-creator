<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="auth.auth_fxml_controllers.SceneScriptController"
          prefHeight="250.0" prefWidth="500.0" styleClass="gridPane">

    <columnConstraints>
        <ColumnConstraints percentWidth="100"  />
    </columnConstraints>

    <Label fx:id="titleLabel" text="Scene Script" GridPane.rowIndex="0" styleClass="label"/>
    <TextField fx:id="sceneScript" promptText="Enter scene script" GridPane.rowIndex="1" styleClass="textfield"/>
    <Button fx:id="addButton" text="Add Scene Script" GridPane.rowIndex="2" styleClass="button" onMouseClicked="#addSceneScript"/>

    <stylesheets>
        <URL value="@styles/popup.css" />
    </stylesheets>

</GridPane>
