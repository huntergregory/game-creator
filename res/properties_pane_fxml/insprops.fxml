<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="25" vgap="10"
          fx:controller="auth.auth_fxml_controllers.InsPropsController">
    <columnConstraints>
        <ColumnConstraints percentWidth="50"  />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>
    <padding><Insets left="15" right="15"/></padding>
    <Label text="instanceID"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           styleClass="propertyName"/>

    <TextField styleClass="propertyValue" fx:id="instanceIDField"
               onKeyPressed="#instanceIDKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="instanceOf" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="instanceOfField" styleClass="propertyValue"
               disable="true"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="x" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="xField" styleClass="propertyValue"
               onKeyPressed="#xKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="y" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="yField" styleClass="propertyValue"
               onKeyPressed="#yKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="width" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="widthField" styleClass="propertyValue"
               onKeyPressed="#widthKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="height" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextField fx:id="heightField" styleClass="propertyValue"
               onKeyPressed="#heightKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Label text="zIndex" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <TextField fx:id="zIndexField" styleClass="propertyValue"
               onKeyPressed="#zIndexKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Label text="bgImage" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="8"/>

    <TextField fx:id="bgImgField" styleClass="propertyValue"
               onKeyPressed="#bgImageKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <Label text="bgColor" styleClass="propertyName"
           GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <TextField fx:id="bgColorField" styleClass="propertyValue"
               onKeyPressed="#bgColorKeyPressed"
               GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    <stylesheets>
        <URL value="@styles/sceneprops.css" />
    </stylesheets>
</GridPane>
